= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg
  .inputs
    %label Player X
    = select("match", "player_x", Player.all.collect {|p| [p.name, p.id]})
    %label Player O
    = select("match", "player_o", Player.all.collect {|p| [p.name, p.id]})
  .actions
    = f.submit 'Save'
